<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leftemenu_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_red_bg">

            <ImageButton
                android:id="@+id/ib_leftmenu_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/img_menu"
                />

            <TextView
                android:id="@+id/tv_leftmenu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="标题"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_leftmenu_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/splash_bg_newyear">

        <ImageView
            android:id="@+id/iv_leftmenu_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/hehe"/>

        <TextView
            android:id="@+id/tv_leftmenu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_leftmenu_head"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="MrbigW"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_leftmenu_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_leftmenu_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="1024057635@qq.com"
            android:textColor="#e6e3e3"
            android:textSize="14dp"/>

        <ListView
            android:id="@+id/lv_leftmenu_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_leftmenu_email"
            android:background="@drawable/bg_tab"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"/>

    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>